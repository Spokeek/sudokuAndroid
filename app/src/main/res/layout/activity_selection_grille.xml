<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selection_grille"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.belhomme.alexandre.sudokuandroid.SelectionGrilleActivity">

    <ListView
        android:id="@+id/liste_selection_grille"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/voir_niveau"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/voir_niveau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textSize="18sp" />
</RelativeLayout>
