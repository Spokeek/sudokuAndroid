<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.belhomme.alexandre.sudokuandroid.MainActivity"
    android:background="#2980b9">

    <Button
        android:text="Lancer le jeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:id="@+id/button_lancement"
        android:layout_below="@+id/text_acceuil"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button"
        android:textSize="22sp" />

    <TextView
        android:text="Bienvenue dans le meilleur jeu de sudoku trouvable sur Android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/text_acceuil"
        android:textAlignment="center"
        android:lineSpacingExtra="8sp"
        android:textStyle="normal|bold"
        android:textColor="#f1c40f"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="32sp" />
</RelativeLayout>
